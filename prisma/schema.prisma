// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String

  authoredModel Model[]  @relation("AuthoredModel")
  profile       Profile
}

model Model {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  message     String
  createdAt   DateTime   @default(now())
  author      User       @relation(references: [id], fields: [authorId], onDelete: Cascade, "AuthoredModel")
  authorId    String     @db.ObjectId
  imaginaryPartX Float[]   
  imaginaryPartY Float[]  
  dfImaginaryPartX Float[] 
  dfImaginaryPartY Float[] 
  dfRealPartX Float[]   
  dfRealPartY Float[]  
}

type Profile {
  firstName      String
  lastName       String
  profilePicture String?
}
